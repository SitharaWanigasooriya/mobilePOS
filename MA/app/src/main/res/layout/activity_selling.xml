<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.sitharawanigasooriy.ma.Selling">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sellingProductCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/selling_product_code"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/sellingQunatity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/selling_quantity"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/sellingEnterbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/selling_enter"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/sellingSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/selling_search"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/sellingBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/selling_barcode"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.codecrafters.tableview.TableView
                android:id="@+id/sellingtable"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

            </de.codecrafters.tableview.TableView>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="center"
                tools:ignore="NestedWeights,UselessParent">

                <TextView
                    android:id="@+id/selling_Sub_total"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/selling_Sub_totalTxt"
                    android:textAlignment="textEnd"
                    tools:ignore="HardcodedText,NestedWeights" />

                <TextView
                    android:id="@+id/selling_Sub_totalTxt"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="@string/selling_totalhint"
                    android:textAlignment="textEnd"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="NestedWeights,UselessParent">

                <TextView
                    android:id="@+id/selling_DiscountTextView"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sellingDiscountTxt"
                    android:textAlignment="textEnd"
                    tools:ignore="HardcodedText,NestedWeights" />

                <EditText
                    android:id="@+id/sellingDiscount"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:hint="@string/selling_totalhint"
                    android:textAlignment="textEnd"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="textEnd"
                tools:ignore="NestedWeights,UselessParent">

                <TextView
                    android:id="@+id/selling_Tax"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/selling_TaxTxt"
                    android:textAlignment="textEnd"
                    tools:ignore="HardcodedText,NestedWeights" />

                <EditText
                    android:id="@+id/selling_TaxTxtAmount"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:hint="@string/selling_totalhint"
                    android:textAlignment="textEnd"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="NestedWeights,UselessParent">

                <TextView
                    android:id="@+id/selling_TotalTextView"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/selling_nothingTxt"
                    android:textAlignment="textEnd"
                    tools:ignore="HardcodedText,NestedWeights" />

                <TextView
                    android:id="@+id/selling_net_total"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="@string/selling_totalhint"
                    android:textAlignment="textEnd"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="NestedWeights,UselessParent">

                <TextView
                    android:id="@+id/sellingRecievedTxtView"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/selling_recievedTxt"
                    android:textAlignment="textEnd"
                    tools:ignore="HardcodedText,NestedWeights" />

                <EditText
                    android:id="@+id/sellingAmountRecieved"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:hint="@string/selling_totalhint"
                    android:textAlignment="textEnd" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="NestedWeights,UselessParent">

                <TextView
                    android:id="@+id/sellingChangeTxtView"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/selling_changeTxt"
                    android:textAlignment="textEnd"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/sellingAmountChange"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:hint="@string/selling_totalhint"
                    android:textAlignment="textEnd" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/selling_cashButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/selling_cash"
            tools:ignore="HardcodedText,NestedWeights" />
    </LinearLayout>
</LinearLayout>

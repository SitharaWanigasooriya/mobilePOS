<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orde"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.sitharawanigasooriy.ma.Order">

    <LinearLayout
        android:id="@+id/FirstHorizontalLinearLayOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <android.support.v7.widget.CardView
            android:id="@+id/FirstOrderCardView"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/cardview_shadow_end_color">

            <LinearLayout
                android:id="@+id/PlaceOrderLinearLayOut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/PlaceOrderImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_pink"
                    android:contentDescription=""
                    android:padding="10dp"
                    android:src="@drawable/ic_shopping_cart_black_24dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/PlaceOrderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/order_place_order"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/PlaceOrderView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorAccent" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/SecondOrderCardView"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/cardview_shadow_end_color">

            <LinearLayout
                android:id="@+id/ViewOrderLinearLayOut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ViewOrderImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_pink"
                    android:padding="10dp"
                    android:src="@drawable/ic_view_list_black_24dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/ViewOrderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/order_view_order"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/ViewOrderView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorAccent" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
